<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Taller.App.Front</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/style.css">

    <link rel="stylesheet" href="~/Taller.App.Front.styles.css" asp-append-version="true" />
</head>
<body>
<div >
    <header>
        <div class="main wrap">
            <h1><img src="/images/logo.png" alt=""></a></h1>
            <p>250240 Bogotá, Colombia <span>57 (601) 628 4875</span></p>
        </div>

        <nav>
        <ul class="menu">
            <li class="current"><a asp-page="/Index" class="home"><img src="images/home.jpg" alt=""></a></li>
            <li><a asp-page="/Propietario/GestionPropietario">Propietario</a></li>
            <li><a asp-page="/JefeOperacion/GestionJefeOperacion">Jefe de Operaciones</a></li>
            <li><a>Mecanico</a></li>
            <li><a>Servicios</a></li>
            <li><a>Sedes</a></li>
            <li><a>Admin</a></li>
        </ul>
        <div class="clear"></div>
        </nav>
    </header>
</div>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Taller.App.Front - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>